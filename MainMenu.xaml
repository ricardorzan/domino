<Page x:Class="Domino.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Domino"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:p = "clr-namespace:Domino.Properties"
      Title = "{x:Static p:Resources.Title}" Height = "350" Width = "604">
    
    <Grid x:Name="Main">

        <Button x:Name = "buttonMarcadores" Content = "{x:Static p:Resources.VerMarcadores_Button}" 
         HorizontalAlignment = "Left" Margin = "25,230,0,0" VerticalAlignment = "Top" Width = "125"/>

        <Button x:Name = "buttonJugarSolo" Content = "{x:Static p:Resources.JugarSolo_Button}" 
         HorizontalAlignment = "Left" Margin = "25,150,0,0" VerticalAlignment = "Top" Width = "125"/>
        
        <Button x:Name = "buttonJugarMultijugador" Content = "{x:Static p:Resources.JugarMultijugador_Button}" 
            HorizontalAlignment = "Left" Margin = "25,190,0,0" VerticalAlignment = "Top" Width = "125"/>

    </Grid>

</Page>